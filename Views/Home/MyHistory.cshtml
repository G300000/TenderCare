@model Project.Models.Patient

<div class="container" style="padding: 40px; min-height: 80vh; font-family: 'Segoe UI', sans-serif;">

    @if (Model == null || Model.Appointments == null || !Model.Appointments.Any())
    {
        @* This block replaces the error with a friendly message for new accounts *@
        <div style="background: white; padding: 50px; border-radius: 15px; box-shadow: 0 4px 20px rgba(0,0,0,0.08); text-align: center; border-top: 5px solid #6c5ce7;">
            <i class="fas fa-calendar-check" style="font-size: 3.5rem; color: #6c5ce7; margin-bottom: 20px;"></i>
            <h2 style="color: #2c3e50;">Welcome to your Medical History</h2>
            <p style="color: #7f8c8d; font-size: 1.1rem;">You don't have any recorded appointments yet.</p>
            <div style="margin-top: 30px;">
                <a asp-controller="Home" asp-action="Services" class="btn" style="background: #6c5ce7; color: white; padding: 12px 30px; border-radius: 25px; text-decoration: none; font-weight: 600; transition: 0.3s;">
                    Book Your First Appointment
                </a>
            </div>
        </div>
    }
    else
    {
        @* This section only shows if the user actually has history data *@
        <div style="background: white; padding: 30px; border-radius: 15px; box-shadow: 0 4px 20px rgba(0,0,0,0.08); margin-bottom: 30px; border-top: 5px solid #6c5ce7;">
            <h2 style="color: #2c3e50; margin: 0;">Hello, @Model.PatientName!</h2>
            <p style="color: #7f8c8d; margin-top: 8px;">Logged in as: <strong>@Model.Email</strong></p>
        </div>

        <h3 style="color: #2c3e50; margin-bottom: 20px; font-weight: 700;">My Medical History</h3>

        <div class="table-responsive" style="background: white; border-radius: 15px; padding: 20px; box-shadow: 0 2px 15px rgba(0,0,0,0.05);">
            <table class="table" style="width: 100%; border-collapse: collapse;">
                <thead>
                    <tr style="text-align: left; border-bottom: 2px solid #f4f7f6; color: #95a5a6; text-transform: uppercase; font-size: 0.8rem;">
                        <th style="padding: 15px;">Date</th>
                        <th style="padding: 15px;">Service</th>
                        <th style="padding: 15px;">Status</th>
                        <th style="padding: 15px;">Doctor's Notes</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var app in Model.Appointments.OrderByDescending(a => a.AppointmentDate))
                    {
                        <tr style="border-bottom: 1px solid #f8f9fa;">
                            <td style="padding: 15px; font-weight: 600;">@app.AppointmentDate?.ToString("MMM dd, yyyy")</td>
                            <td style="padding: 15px;">@app.ServiceType</td>
                            <td style="padding: 15px;">
                                <span style="background: #e1f5fe; color: #0288d1; padding: 5px 12px; border-radius: 20px; font-size: 0.75rem; font-weight: 700;">
                                    @(app.Status?.ToUpper() ?? "PENDING")
                                </span>
                            </td>
                            <td style="padding: 15px; color: #636e72; font-style: italic; line-height: 1.5;">
                                @(string.IsNullOrEmpty(app.Notes) ? "No notes added yet." : app.Notes)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>